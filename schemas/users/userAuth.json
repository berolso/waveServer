  "default": {},
  "examples": [
      {
          "email": "user@user.com",
          "password": "password"
      }
  ],
  "required": [
      "email",
      "password"
  ],
  "properties": {
      "email": {
          "$id": "#/properties/email",
          "type": "string",
          "title": "The email schema",
          "description": "An explanation about the purpose of this instance.",
